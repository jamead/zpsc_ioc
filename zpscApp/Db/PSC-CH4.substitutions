{ERR, 2, 81}
{ERR, 3, 82}
{ERR, 4, 83}
{INJ, 1, 90}
{INJ, 2, 91}
{INJ, 3, 92}
{INJ, 4, 93}
{EVR, 1, 100}
{EVR, 2, 101}
{EVR, 3, 102}
{EVR, 4, 103}
}

