# Record set for a 4CH zpsc
#
# Macros:
#  P      =
#  NAME   = PSC Name (Default "PSC")
#  NO     = PSC Identification Number 
#  BUFLEN = 
#  RPATH1, RNAME1
#  RPATH2, RNAME2
#  RPATH3, RNAME3
#  RPATH4, RNAME4
#

global {P="$(PREFIX)", NAME="$(PSCNAME)", NO="$(PSCNO)", BUFLEN="$(PSCBUFLEN)"}


# LEVEL0 : P, NAME, NO
# Lstats (MSG ID 101)
file "lstats.template"
{{}}


# LEVEL0 : P, NAME, NO
# 10Hz Status PV's (MSG ID 30)
file "status10hz.template"
{{}}

# record(stringin, "$(P){$(NO)}RampTableFile") {
# LEVEL0 : P, NO
file "control_glob.template"
{{}}

