# LEVEL1 : CHAN, RAMPPATH, RAMPNAME
# record(stringin, "$(P){$(NO)}Chan$(CHAN):RampTable-FilePath") {
# record(stringin, "$(P){$(NO)}Chan$(CHAN):RampTable-FileName") {
file "control_chan.template" 
{
pattern
{CHAN, RAMPPATH, RAMPNAME}
{1, "/home", "data.txt"}
{2, "/home", "data.txt"}
{3, "/home", "data.txt"}
{4, "/home", "data.txt"}
}

# LEVEL0 : P, NAME, NO, BUFLEN 
# LEVEL1 : CHAN, TYPE, MSGID 
